<UserControl x:Class="warehouseManagement.Controls.CustomPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:warehouseManagement.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <PasswordBox   x:Name="txtPassword"
                   FontSize="18"
                   Foreground="AliceBlue"
                   FontWeight="Medium"
                   FontFamily="Comic Sans MS"
                   CaretBrush="AliceBlue"
                   BorderBrush="#FF33569E"
                   BorderThickness="0,0,0,3"
                   Padding="20,0,0,0">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/warehouseManagement;component/Images/password-icon.png"
                        Stretch="none"
                        AlignmentX="Left"
                        Opacity="0.7"/>
        </PasswordBox.Background>

    </PasswordBox>
</UserControl>
